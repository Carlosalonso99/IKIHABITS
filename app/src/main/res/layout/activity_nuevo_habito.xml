<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.NuevoHabitoActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <EditText
        android:id="@+id/editTextTituloHabito"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="@string/titulo_habito"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/editTextDescripcionHabito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/descripcion_habito"
        android:minHeight="80dp"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextTituloHabito" />

    <Button
        android:id="@+id/buttonGuardarHabito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="117dp"
        android:text="@string/guardar"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchCompletado" />

    <Switch
        android:id="@+id/switchCompletado"
        style="@style/Base.Theme.Controla_tus_habitos"
        android:layout_width="197dp"
        android:layout_height="64dp"
        android:layout_marginTop="11dp"
        android:switchTextAppearance="@style/Base.Theme.Controla_tus_habitos"
        android:text="Completado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDescripcionHabito" />

    <Spinner
        android:id="@+id/spinnerCategoria"
        android:layout_width="207dp"
        android:layout_height="67dp"
        android:layout_marginTop="19dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonGuardarHabito"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/switchCompletado"
        app:layout_constraintVertical_bias="0.14" />

    <Button
        android:id="@+id/btnGrabar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:onClick="onGrabarClicked"
        android:text="Grabar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinnerCategoria"
        app:layout_constraintTop_toBottomOf="@+id/switchCompletado" />

    <TextView
        android:id="@+id/tvEstadoGrabacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado: Inactivo"
        app:layout_constraintBottom_toTopOf="@+id/btnGrabar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinnerCategoria" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewAudios"
        android:layout_width="415dp"
        android:layout_height="278dp"
        android:layout_marginTop="22dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGuardarHabito" />

</androidx.constraintlayout.widget.ConstraintLayout>
